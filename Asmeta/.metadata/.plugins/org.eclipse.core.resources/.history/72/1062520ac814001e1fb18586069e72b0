asm SetteEMezzoATGT

import StandardLibrary

signature: 

	enum domain Carte = {ASSO | DUE | TRE | QUATTRO | CINQUE | SEI | SETTE | REGINA | RE}
	enum domain StatoPartita = {VINTA | PERSA | NONDEFINITA}
	
	dynamic monitored vittoria: StatoPartita
	dynamic controlled mano: Carte
	dynamic controlled pescata: Carte
	
definitions:	
	
	rule r_partita =
		if(not(vittoria)) then
			if(mano = SETTE and (pescata = RE or pescata = REGINA)) then
				vittoria := true
			else if(mano = ASSO)
		endif
	
		
	main rule r_main = 
			r_partita[]

default init s0:

