-- options: flatten? false
MODULE main
	VAR
		pescata: {ASSO, CARTE_UNDEF, CINQUE, DUE, NULL, QUATTRO, SEI, SETTE, TRE}; --monitored
		vittoria: {NONDEFINITA, PERSA, STATOPARTITA_UNDEF, VINTA}; --controlled
	CONSTANTS STATOPARTITA_UNDEF, NONDEFINITA, PERSA, VINTA, CARTE_UNDEF, ASSO, CINQUE, DUE, NULL, QUATTRO, SEI, SETTE, TRE;
	ASSIGN
		init(vittoria) := NONDEFINITA;
		next(vittoria) :=
			case
				(!(pescata = SETTE)): PERSA;
				(pescata = SETTE): VINTA;
				TRUE: vittoria;
			esac;
--CTL properties
CTLSPEC NAME ctl0 := AG(!(!(pescata = SETTE) & (vittoria != PERSA)));
