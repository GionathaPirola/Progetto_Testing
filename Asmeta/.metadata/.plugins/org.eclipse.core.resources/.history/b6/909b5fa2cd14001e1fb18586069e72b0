asm SetteEMezzoATGT

import StandardLibrary

signature: 

	enum domain Carte = {NULL | ASSO | DUE | TRE | QUATTRO | CINQUE | SEI | SETTE}
	enum domain StatoPartita = {VINTA | PERSA | NONDEFINITA}
	
	dynamic controlled vittoria: StatoPartita
	dynamic controlled mano: Carte
	dynamic monitored pescata: Carte
	
definitions:	
	
	rule r_partita =
		if(pescata = SETTE)then
			vittoria := VINTA
		else
			vittoria := PERSA	
		endif
	
	
	main rule r_main = 
		r_partita[]

default init s0:
	function vittoria = NONDEFINITA
	function mano = NULL

